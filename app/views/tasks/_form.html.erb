  <%= form_with(model: task, local: true) do |f| %>
  <% if @task.errors.any? %>
  <%= render 'layouts/error_messages', model: f.object %>
<% end %>

  <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status %>

  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>

  <%= f.submit '投稿' %>
<% end %>